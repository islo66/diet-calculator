<IfModule mod_rewrite.c>
    RewriteEngine On

    # Redirect all requests to the public/ subdirectory
    # This allows the entire Laravel project to sit in public_html/
    # while keeping the web-accessible entry point in public/
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^(.*)$ /public/$1 [L]
</IfModule>
